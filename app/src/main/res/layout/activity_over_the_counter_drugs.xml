<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register"
    tools:context=".OverTheCounterDrugsActivity">

    <TextView
        android:id="@+id/medicine_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="27dp"
        android:text="What is the patient's disease?"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        />

    <LinearLayout
        android:id="@+id/linear1_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pain_in_muscles"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/muscles" />

        <ImageView
            android:id="@+id/rhinitis"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/rhinitis"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear1_category_layout"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="15dp">

        <ImageView
            android:id="@+id/cough"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/cough"
            />


        <ImageView
            android:id="@+id/sore_throat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/sore_thoat"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear3_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear2_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/fever"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/fever" />

        <ImageView
            android:id="@+id/headache"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/headache"
            />

    </LinearLayout>


</RelativeLayout>