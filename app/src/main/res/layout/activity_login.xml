<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradeintlogin"
    tools:context=".LoginActivity">

    <EditText

        android:id="@+id/emailText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:autofillHints=""
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_name"
        android:ems="10"
        android:hint="username"
        android:inputType="textPersonName"
        android:text=""
        android:textSize="16dp" />

    <EditText

        android:id="@+id/passText"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@id/emailText"
        android:layout_alignStart="@id/emailText"
        android:layout_alignLeft="@id/emailText"
        android:layout_marginTop="38dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword" />

    <TextView

        android:id="@+id/regText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="43dp"
        android:clickable="true"
        android:text="Not registered ? sign up Here."
        android:textAppearance="@style/TextAppearance.AppCompat.Light.Widget.PopupMenu.Small"
        android:textSize="14sp" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/passText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="132dp"
        android:text="Log In"
        android:textAllCaps="false"
        android:textColor="#313435"
        android:textColorHint="#D3251C1C"
        android:textSize="30sp" />

</RelativeLayout>